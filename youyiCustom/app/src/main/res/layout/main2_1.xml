<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >



	<FrameLayout
        android:id="@+id/main_contalner"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >
    </FrameLayout>

	<LinearLayout
	android:layout_width="match_parent"
	android:layout_height="49dp"
	android:orientation="vertical"
	>
<TextView
	android:layout_width="match_parent"
	android:layout_height="1px"
	android:background="@color/help_button_view"/>

	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
		android:elevation="5dp"
        android:paddingBottom="3dp" >

		<LinearLayout
            android:id="@+id/main_tab_1"
            android:background="?attr/selectableItemBackground"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

                 <ImageView
                    android:id="@+id/main_tab_1_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/tab_home_selected" />


            <TextView
                android:id="@+id/main_tab_1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/footer_individual"
                android:textSize="@dimen/font_style_11"
                android:textColor="@color/blue" />
        </LinearLayout>

		<LinearLayout
            android:id="@+id/main_tab_2"
			android:background="?attr/selectableItemBackground"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >
   <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

	   <ImageView
          android:id="@+id/main_tab_2_icon"
           android:layout_width="30dp"
           android:layout_height="30dp"
          android:src="@drawable/tab_consult" />
   </LinearLayout>

            <TextView
                android:id="@+id/main_tab_2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/footer_somber"
                 android:textSize="@dimen/font_style_11"
                android:text="咨询" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_tab_3"
			android:background="?attr/selectableItemBackground"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/main_tab_3_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/tab_personal" />

            <TextView
                android:id="@+id/main_tab_3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textSize="@dimen/font_style_11"
                android:text="我的"
                android:textColor="@color/footer_somber" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
</LinearLayout>