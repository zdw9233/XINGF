<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.uyi.app.ui.custom.HeaderView
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.uyi.app.ui.custom.HeaderView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp" >

        <View
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:text="剩余健康豆："
                android:textColor="@color/list_item_content_color"
                android:textSize="@dimen/font_style_14" />

            <TextView
                android:id="@+id/recharge_dou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textColor="@color/red"
                android:textSize="@dimen/font_style_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:minWidth="50dp"
                android:text="充值金额："
                android:textColor="@color/list_item_content_color"
                android:textSize="@dimen/font_style_14" />

            <EditText
                android:id="@+id/recharge_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/hui_stroke"
                android:ems="10"
                android:inputType="number"
                android:padding="3dp" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                 android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:minWidth="50dp"
                android:text="支付方式："
                android:textColor="@color/list_item_content_color"
                android:textSize="@dimen/font_style_14" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/alipay_logo" />
        </LinearLayout>

        <Button
            android:id="@+id/recharge_money_submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/blue_bg"
            android:text="确认提交"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>