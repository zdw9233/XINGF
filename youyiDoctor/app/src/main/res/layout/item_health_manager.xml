<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    >

<com.uyi.app.ui.custom.RoundedImageView
    android:layout_marginLeft="6dp"
    android:id="@+id/item_health_header"
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:src="@drawable/user_picture" />

<TextView
    android:id="@+id/item_health_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginLeft="20dp"
    android:layout_toRightOf="@+id/item_health_header"
    android:text="---"
    android:textSize="14sp"
    android:textStyle="bold" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginRight="5dp"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="资料更新时间"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/item_health_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="---"
        android:layout_gravity="center_horizontal"
        android:textSize="11sp" />
</LinearLayout>

</RelativeLayout> 
