<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/hui_stroke"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/search_layout_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:src="@drawable/search_icon" />

    <EditText
        android:id="@+id/search_layout_edit"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:minHeight="30dp"
        android:singleLine="true"  
        android:maxLines="1"
        android:textColor="@color/list_item_content_color"
        android:imeOptions="actionSearch"
        android:background="@null"
        android:ems="10" >
        <requestFocus />
    </EditText>
    <TextView android:id="@+id/search_layout_search_text" android:layout_width="50dp" android:layout_height="match_parent" android:gravity="center" android:textColor="@color/list_item_content_color"  android:text="搜索"/>
</LinearLayout>