<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.uyi.app.ui.custom.HeaderView
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.uyi.app.ui.custom.HeaderView>

    <ScrollView
        android:id="@+id/consult_details_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/group_logo"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/logo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/group_name"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="团队名称"
                        android:textSize="@dimen/font_style_14" />

                    <TextView
                        android:id="@+id/group_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="3"
                        android:minLines="3"
                        android:text="团队创建与团队创建与团队创建与团队创建与团队创建与团队创建与团队创建与团队创建与"
                        android:textSize="@dimen/font_style_11" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/consult_info_toas"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="#FFEBCD"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="资料不全,请补充资料"
                    android:textColor="@color/red"
                    android:textSize="@dimen/font_style_15" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/content_background"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="我的资料"
                    android:textColor="@color/red"
                    android:textSize="@dimen/font_style_14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/small_down_arrow" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="病情描述："
                    android:textSize="@dimen/font_style_11" />

                <TextView
                    android:id="@+id/consult_details_binqingmaioshu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textSize="@dimen/font_style_11" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="上传已做的检查项目："
                    android:textSize="@dimen/font_style_11" />

                <com.uyi.app.ui.custom.FlowRadioGroup
                    android:id="@+id/consult_ditails_jc_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </com.uyi.app.ui.custom.FlowRadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="上传药物文本或图片："
                    android:textSize="@dimen/font_style_11" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <com.uyi.app.ui.custom.FlowRadioGroup
                        android:id="@+id/consult_ditails_yaowutup_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >
                    </com.uyi.app.ui.custom.FlowRadioGroup>

                    <TextView
                        android:id="@+id/consult_ditails_yaowutup_medical_txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_style_11" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="希望医生提供的帮助："
                    android:textSize="@dimen/font_style_11" />

                <TextView
                    android:id="@+id/consult_details_yaowutupian_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:textSize="@dimen/font_style_11" />
            </LinearLayout>
            
            
              <LinearLayout
                android:id="@+id/consult_details_addinfos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/consult_details_yijian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/consult_details_buchongbaogao_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="补充报告:"
                        android:textColor="@color/list_item_content_color"
                        android:textSize="@dimen/font_style_14" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <com.uyi.app.ui.custom.FlowRadioGroup
                            android:id="@+id/consult_details_buchongbaogao_image_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >
                        </com.uyi.app.ui.custom.FlowRadioGroup>

                        <ImageView
                            android:id="@+id/consult_add_buchongbaogao_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/add_img" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:text="补充病情描述:"
                    android:textColor="@color/list_item_content_color"
                    android:textSize="@dimen/font_style_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/hui_stroke" >

                    <EditText
                        android:id="@+id/consult_details_bingqing_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@null"
                        android:ems="10"
                        android:gravity="top"
                        android:hint="病情描述"
                        android:minLines="4"
                        android:textSize="@dimen/font_style_14" >
                    </EditText>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/consult_details_status"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="TextView"
                android:textColor="@color/blue"
                android:textSize="@dimen/font_style_17"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal" >
                  `

                <Button
                    android:id="@+id/consult_detail_suifang"
                    android:layout_width="0dip"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_bg"
                    android:text="立即随访"
                    android:textColor="@color/white"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/consult_detail_pingjia"
                    android:layout_width="0dip"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/blue_stroke"
                    android:text="评价本次咨询"
                    android:textColor="@color/blue"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>