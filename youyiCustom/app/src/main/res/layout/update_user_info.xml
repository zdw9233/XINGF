		             android:background="@drawable/hui_stroke"
		             android:layout_marginTop="10dp"
		             android:padding="3dp"
		             android:layout_width="match_parent" 
		             android:layout_height="wrap_content">
		             <EditText
			            android:id="@+id/register_info_yuejing"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:background="@null"
