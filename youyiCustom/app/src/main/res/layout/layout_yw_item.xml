<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:gravity="center_vertical"
        android:paddingRight="16dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="开始服药日期：2016-7-9"
            android:textSize="@dimen/font_style_12" />

       <TableRow android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1">
           <TextView
               android:id="@+id/tv_end_time"
               android:layout_width="0dp"
               android:layout_height="32dp"
               android:layout_weight="1"
               android:gravity="end|center"
               android:text="结束服药日期："
               android:textSize="@dimen/font_style_12" />
           <Button android:id="@+id/xzrq"
               android:text="选择日期"
               android:textSize="12sp"
               android:background="@drawable/sel_gray_to_white"
               android:layout_width="56dp"
               android:layout_height="32dp"
               />
       </TableRow>
    </TableRow>

    <TextView
        android:id="@+id/tv_ywm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="药物名：春药"
        android:textSize="@dimen/font_style_16"
        android:textStyle="bold" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用药频度："
            android:textStyle="bold" />

        <TextView
            android:id="@+id/yypd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="每6小时服药10g"
            android:textSize="@dimen/font_style_16" />

        <TextView
            android:id="@+id/delete"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/sel_gray_to_white"
            android:gravity="center"
            android:text="╳" />
    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="4dp"
        android:background="@color/light_gray" />
</LinearLayout>