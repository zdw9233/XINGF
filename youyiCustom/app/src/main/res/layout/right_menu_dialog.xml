<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:layout_marginTop="50dp"
    android:layout_marginRight="5dp"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:background="@drawable/right_layer_bg"
        android:layout_gravity="right|top"
        android:padding="10dp"
        android:orientation="vertical" >
        	<LinearLayout  
        	    android:id="@+id/right_menu_update_password"
        	    android:layout_width="match_parent"  
        	    android:layout_height="40dp" 
        	    android:gravity="center_vertical"
        	    android:orientation="horizontal">
        		<ImageView
        		    android:layout_width="wrap_content"
        		    android:layout_height="wrap_content"
        		    android:src="@drawable/change_password" />
        	    <TextView 
				    android:layout_width="wrap_content" 
				    android:layout_height="wrap_content" 
				    android:textColor="@color/black"
				    android:layout_marginLeft="5dp"
				    android:textSize="@dimen/font_style_14"
				    android:text="修改密码"/>
        	</LinearLayout>
		<LinearLayout
			android:id="@+id/right_menu_update_guardian_info"
			android:layout_width="match_parent"
			android:layout_height="40dp"
			android:visibility="gone"
			android:gravity="center_vertical"
			android:orientation="horizontal">
			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:src="@drawable/modifying_data" />
			<TextView
				android:id="@+id/right_xiugai_guardian"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/black"
				android:layout_marginLeft="5dp"
				android:textSize="@dimen/font_style_14"
				android:text="修改监护人资料"/>
		</LinearLayout>
        	<LinearLayout  
        	    android:id="@+id/right_menu_update_info"
        	    android:layout_width="match_parent" 
        	    android:layout_height="40dp" 
        	    android:gravity="center_vertical"
        	    android:orientation="horizontal">
        		<ImageView
        		    android:layout_width="wrap_content"
        		    android:layout_height="wrap_content"
        		    android:src="@drawable/modifying_data" />
        	    <TextView
					android:id="@+id/right_xiugai"
				    android:layout_width="wrap_content" 
				    android:layout_height="wrap_content" 
				    android:textColor="@color/black"
				    android:layout_marginLeft="5dp"
				    android:textSize="@dimen/font_style_14"
				    android:text="修改资料"/>
        	</LinearLayout>
        	<LinearLayout  
        	    android:id="@+id/right_menu_update_pay"
        	    android:layout_width="match_parent" 
        	    android:layout_height="40dp" 
        	    android:gravity="center_vertical"
        	    android:orientation="horizontal">
        		<ImageView
        		    android:layout_width="wrap_content"
        		    android:layout_height="wrap_content"
        		    android:src="@drawable/recharge_" />
        	    <TextView 
				    android:layout_width="wrap_content" 
				    android:layout_height="wrap_content" 
				    android:textColor="@color/black"
				    android:layout_marginLeft="5dp"
				    android:textSize="@dimen/font_style_14"
				    android:text="充值"/>
        	</LinearLayout>
        	<LinearLayout  
        	    android:id="@+id/right_menu_Sweep"
        	    android:layout_width="match_parent" 
        	    android:layout_height="40dp" 
        	    android:gravity="center_vertical"
        	    android:orientation="horizontal">
        		<ImageView
        		    android:layout_width="wrap_content"
        		    android:layout_height="wrap_content"
        		    android:src="@drawable/sweep_" />
        	    <TextView 
				    android:layout_width="wrap_content" 
				    android:layout_height="wrap_content" 
				    android:textColor="@color/black"
				    android:layout_marginLeft="5dp"
				    android:textSize="@dimen/font_style_14"
				    android:text="扫一扫"/>
        	</LinearLayout>
    </LinearLayout>
    
</LinearLayout>
