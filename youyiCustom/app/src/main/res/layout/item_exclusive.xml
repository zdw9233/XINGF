<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:padding="5dp"
    android:orientation="horizontal" >

    <com.uyi.app.ui.custom.RoundedImageView
        android:id="@+id/item_exclusive_header"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="5dp"
        android:background="@drawable/user_picture" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/item_exclusive_name"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="@dimen/font_style_14"
                android:text="医生" />

            <TextView
                  android:id="@+id/item_exclusive_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/list_item_content_color"
                android:textSize="@dimen/font_style_12"
                android:text="2015-12-12" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_exclusive_content"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/list_item_content_color"
                android:textSize="@dimen/font_style_12"
                android:maxLines="1"
            android:text="2012131222222222222222111111111111111112222" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  android:textColor="@color/list_item_content_color"
                android:textSize="@dimen/font_style_12"
                android:text="已预约人数：" />

            <TextView
                   android:id="@+id/item_exclusive_count"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                  android:textColor="@color/red"
                android:textSize="@dimen/font_style_12"
                android:text="10人(已满员)" /> 
              <TextView
                     android:id="@+id/item_exclusive_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:textColor="@color/red"
                android:textSize="@dimen/font_style_12"
                android:text="已取消" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>