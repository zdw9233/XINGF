<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" 
    android:id="@+id/new_consult_main">

    <com.uyi.app.ui.custom.HeaderView
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.uyi.app.ui.custom.HeaderView>

    <ScrollView 
        android:id="@+id/new_consult_layout" 
        android:layout_width="match_parent" 
          android:visibility="gone"
        android:layout_height="wrap_content">
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/new_consult_group_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:src="@drawable/left_arrow_default" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="5dp" >

                <ImageView
                    android:id="@+id/new_consult_group_logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/logo" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingLeft="5dp" >

                    <TextView
                        android:id="@+id/new_consult_group_name"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="团队名称"
                        android:textColor="@color/list_item_content_color"
                        android:textSize="@dimen/font_style_15" />

                    <TextView
                        android:id="@+id/new_consult_group_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="团队介绍团队介绍团队介绍团队介绍团队介绍团队介绍团队介绍"
                        android:textColor="@color/list_item_content_color"
                        android:textSize="@dimen/font_style_11" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
               android:id="@+id/new_consult_group_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow_default" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/hui_stroke"
                android:padding="3dp" >

                <EditText
                    android:id="@+id/new_consult_zs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="10"
                     android:textSize="@dimen/font_style_14"
                     android:maxLength="200"
                    android:gravity="top"
                    android:hint="病情主诉"
                    android:minLines="3" >
                </EditText>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/required_" />
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:orientation="vertical">
            <LinearLayout 
                android:layout_marginTop="20dp"
                android:layout_width="match_parent" 
                android:layout_height="wrap_content" 
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_style_14"
                    android:textColor="@color/list_item_content_color"
                    android:text="上传已检查的项目：" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                    <com.uyi.app.ui.custom.FlowRadioGroup 
                        android:id="@+id/new_consult_jc_layout"
                        android:layout_width="match_parent" 
                        android:layout_height="wrap_content"  >
                      
                    </com.uyi.app.ui.custom.FlowRadioGroup>
                      <ImageView
                            android:id="@+id/new_consult_add_jc_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/add_img" />
                    <TextView
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_marginTop="10dp"
		                    android:textSize="@dimen/font_style_11"
		                    android:textColor="@color/blue"
		                    android:text="包括测血糖、抽血、拍片、心电图、B超或其他检查也包括接诊医生在病历本上书写的文字" />
                </LinearLayout>
            </LinearLayout>
            
            
                  <LinearLayout 
                android:layout_marginTop="20dp"
                android:layout_width="match_parent" 
                android:layout_height="wrap_content" 
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_style_14"
                    android:textColor="@color/list_item_content_color"
                    android:text="上传已使用的药物：" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                    <com.uyi.app.ui.custom.FlowRadioGroup 
                        android:id="@+id/new_consult_yaowuwenben_layout"
                        android:layout_width="match_parent" 
                        android:layout_height="wrap_content"    >
                       
                    </com.uyi.app.ui.custom.FlowRadioGroup>
                     <ImageView
                            android:id="@+id/new_consult_add_ywwb_image"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/add_img" />
                    <TextView
		                    android:layout_width="wrap_content"
		                    android:layout_height="wrap_content"
		                    android:layout_marginTop="10dp"
		                    android:textSize="@dimen/font_style_11"
		                    android:textColor="@color/blue"
		                    android:text="可以是处方拍照、或拿到药物拍照" />
                    <TextView
			            android:id="@+id/new_consult_add_text_desc"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:minHeight="30dp"
			            android:gravity="center_vertical"
			            android:textColor="@color/red"
			            android:textSize="@dimen/font_style_14"
			            android:text="没有图片？点击添加文字描述" />
                    
                      <LinearLayout
                          android:id="@+id/new_consult_yaowu_text_desc_layout"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:background="@drawable/hui_stroke"
	                android:visibility="gone"
	                android:padding="3dp" >

                <EditText
                    android:id="@+id/new_consult_yaowu_text_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                     android:textSize="@dimen/font_style_14"
                    android:background="@null"
                    android:ems="10"
                    android:maxLength="200"
                    android:gravity="top"
                    android:minLines="3" >
                </EditText>
            </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            
        </LinearLayout>

        
<View android:layout_width="match_parent" android:layout_height="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/hui_stroke"
                android:padding="3dp" >

                <EditText
                    android:id="@+id/new_consult_bz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:ems="10"
                     android:textSize="@dimen/font_style_14"
                       android:maxLength="200"
                    android:gravity="top"
                    android:hint="希望医生提供的帮助"
                    android:minLines="3" >
                </EditText>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@drawable/required_" />
        </LinearLayout>
 
        <View
            android:layout_width="1dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/new_evaluate_submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/blue_bg"
            android:text="提交互动"
            android:textColor="@color/white" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>