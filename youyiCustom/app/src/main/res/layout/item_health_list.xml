<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/item_health_list_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="10dp"
        android:src="@drawable/warning" />

    <TextView
        android:id="@+id/item_health_list_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_style_14"
        android:textColor="@color/list_item_content_color"
        android:layout_weight="1"
        android:text="血压血脂检查报告" />

    <TextView
        android:id="@+id/item_health_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
          android:textSize="@dimen/font_style_10"
        android:textColor="@color/list_item_content_color"
        android:text="2015-12-12" />

</LinearLayout>
