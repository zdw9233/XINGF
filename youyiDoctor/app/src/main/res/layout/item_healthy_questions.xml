<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="5dp"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/item_healthy_questions_content"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:layout_weight="1"
        android:textColor="@color/list_item_content_color"
        android:textSize="@dimen/font_style_12"
        android:text="201211111111111111111111111111111111111111111111111111" />

    <TextView
        android:id="@+id/item_healthy_questions_date"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:textColor="@color/list_item_content_color"
        android:textSize="@dimen/font_style_12"
        android:text="2012-01-06" />

</LinearLayout>
