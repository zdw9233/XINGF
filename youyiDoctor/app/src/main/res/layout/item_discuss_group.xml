<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white"
    android:orientation="horizontal" >

    <com.uyi.app.ui.custom.RoundedImageView
        android:id="@+id/item_discuss_group_logo"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_discuss_group_time"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/list_item_content_color"
            android:textSize="@dimen/font_style_12" />

        <TextView
            android:id="@+id/item_discuss_group_content"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:maxLines="1"
             android:gravity="center_vertical"
            android:textColor="@color/list_item_content_color"
            android:textSize="@dimen/font_style_12" />
    </LinearLayout>

</LinearLayout>