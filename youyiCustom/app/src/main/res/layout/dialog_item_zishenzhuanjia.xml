<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

   
   <LinearLayout 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"
       android:orientation="vertical"
       android:background="@color/white"
       >
       
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

             <com.uyi.app.ui.custom.RoundedImageView
                android:id="@+id/item_zishenzhuanjia_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/user_img" />

            <TextView
                android:id="@+id/item_zishenzhuanjia_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="- - -"
                android:textColor="@color/blue" />
        </LinearLayout>
       <TextView 
                android:id="@+id/item_zishenzhuanjia_info"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
           android:layout_marginLeft="10dp"
           android:minLines="3"
           android:text="- - -"/>
       <TextView 
            android:id="@+id/item_zishenzhuanjia_type"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
           android:layout_marginLeft="10dp"
           android:layout_marginBottom="20dp"
           android:text="资深专家"
           android:textColor="@color/red"
           />
   </LinearLayout>
<Button
   
       android:layout_width="25dp"
       android:layout_height="25dp"
       android:layout_alignParentRight="true"
       android:layout_alignParentTop="true"
       android:background="@drawable/layer_close" />
<Button
        android:id="@+id/zsdoctor_exit"
      android:layout_width="40dp"
       android:layout_height="40dp"
       android:layout_alignParentRight="true"
       android:layout_alignParentTop="true"
       android:background="#00000000" />
 
</RelativeLayout> 
