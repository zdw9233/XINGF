<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal" >



               <com.uyi.app.ui.custom.RoundedImageView
                android:id="@+id/item_team_docter_header"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/user_img" />

        

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
 
            android:orientation="vertical"  >
            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="10dp"
             android:orientation="horizontal">
                <TextView
                android:id="@+id/item_team_docter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王医生"
                android:textColor="@color/black"
                android:textSize="@dimen/font_style_14" />
                    <TextView
                android:id="@+id/item_team_docter_islift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（离团）"
                android:textColor="@color/red"
                android:textSize="@dimen/font_style_12" />
            </LinearLayout>
            
             <TextView
                android:id="@+id/item_team_docter_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                  android:layout_marginLeft="10dp"
             android:layout_marginTop="5dp"
                android:text="王医生的介绍王医生的介绍王医生的介绍王医生的介绍王医生的介绍王医生的介绍王医生的介绍王医生的介绍王医生的介绍"
                android:textColor="@color/list_item_content_color"
                android:maxLines="1"
                android:minLines="1"
                android:textSize="@dimen/font_style_12" />
        </LinearLayout>
  

</LinearLayout>
