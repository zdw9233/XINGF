<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
       <com.uyi.app.ui.custom.HeaderView 
	    android:id="@+id/team_headerView"
	    android:layout_width="match_parent" 
	    android:layout_height="wrap_content">
	</com.uyi.app.ui.custom.HeaderView>
	  <ScrollView 
        android:id="@+id/team_details_layout"
        android:layout_width="match_parent" 
        android:layout_height="0dp"
        android:layout_weight="5" 

        android:scrollbars="none"
        android:padding="5dp">
        <LinearLayout 
            android:layout_width="match_parent" 
            android:layout_height="fill_parent" 
            android:orientation="vertical"   >
	        <LinearLayout 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/team_group_logo"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo" />
                <LinearLayout 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical"  >
                    <TextView
                        android:id="@+id/team_group_name"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/font_style_14"
                        android:text="团队名称" />

                    <TextView
                        android:id="@+id/team_group_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:textSize="@dimen/font_style_10"
                         android:minLines="3"
                        
                        android:text="- - -" />
                </LinearLayout>
                  </LinearLayout>
                   <LinearLayout 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                   <LinearLayout 
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:orientation="vertical">
                  <com.uyi.app.ui.custom.RoundedImageView
                    android:id="@+id/team_zl_group_logo"
                    android:layout_width="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="50dp"
                    android:src="@drawable/user_picture" 
                    android:layout_marginTop="10dp"/>
                <TextView 
                
                    android:layout_width="wrap_content"
                    
                    android:layout_height="wrap_content"
                android:text="慢病管理师"
                android:textSize="12sp"
                android:textColor="@color/blue"
                    android:layout_marginTop="5dp"/>/>
                   </LinearLayout>
                <LinearLayout 
                    android:layout_width="match_parent" 
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:orientation="vertical"  >
              <LinearLayout 
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
                  <TextView 
                      android:layout_width="wrap_content"
                      android:layout_marginTop="10dp"
                      android:layout_height="wrap_content"
                      android:text="姓名："
                      android:textSize="12sp"/>
                     <TextView 
                         android:id="@+id/team_zl_name"
                      android:layout_width="wrap_content"
                      android:layout_marginTop="10dp"
                      android:layout_height="wrap_content"
                      android:text="- - -"
                      android:textSize="12sp"
                      android:textColor="@color/blue"/>
                        <TextView 
                        
                      android:layout_width="wrap_content"
                      android:layout_marginTop="10dp"
                      android:layout_height="wrap_content"
                      android:text="手机号码："
                      android:layout_marginLeft="20dp"
                      android:textSize="12sp"/>
                           <TextView 
                                     android:id="@+id/team_zl_phone"
                      android:layout_width="wrap_content"
                      android:layout_marginTop="10dp"
                      android:layout_height="wrap_content"
                      android:text="- - -"
                      android:textColor="@color/blue"
                      android:textSize="12sp"/>
                  
              </LinearLayout>

                    <TextView
                   
                        android:layout_marginTop="5dp"
                        android:id="@+id/team_zl_group_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                         android:textSize="@dimen/font_style_10"
                         android:minLines="3"                      
                        android:text="- - -" />
                </LinearLayout>
                  </LinearLayout>
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#ffebcd"
                    android:orientation="vertical">
                    <LinearLayout 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                      
                        android:orientation="horizontal">
                    <LinearLayout 
                          android:layout_width="0dp"
                          android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                          <TextView 
                      android:layout_width="wrap_content"
                      android:layout_marginTop="10dp"
                      android:layout_height="wrap_content"
                      android:text="收费标准"
                      android:textSize="12sp"
                      />
                          <TextView android:id="@+id/tezm_money"
                      android:layout_width="wrap_content"
                      android:layout_marginTop="10dp"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="5dp"
                      android:text="- - -"
                      android:textSize="12sp"
                      android:textColor="@color/red"/>
                           <TextView 
                      android:layout_width="wrap_content"
                      android:layout_marginTop="10dp"
                      android:layout_height="wrap_content"
                      android:text="元/年"
                      android:textSize="12sp"
                     />
                    </LinearLayout>
                        <LinearLayout 
                          android:layout_width="0dp"
                          android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                            <TextView 
                      android:layout_width="wrap_content"
                      android:layout_marginTop="10dp"
                      android:layout_height="wrap_content"
                      android:text="综合评价星级"
                      android:textSize="12sp"
                    />
                               <RatingBar
                      android:id="@+id/team_details_rating"
                       android:layout_marginTop="10dp"
                      style="@style/roomRatingBars"
                   
        android:isIndicator="true"
 	android:layout_marginLeft="10dp"
 
        android:numStars="5"   			
                  android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                              </LinearLayout>
                    </LinearLayout>
                      <LinearLayout 
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">
                         <LinearLayout 
                          android:layout_width="0dp"
                          android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                         <TextView 
                      android:layout_width="wrap_content"
                      android:layout_marginTop="10dp"
                      android:layout_height="wrap_content"
                      android:text="本月咨询数"
                      android:textSize="12sp"
                      />
                          <TextView 
                              android:id="@+id/team_zixunshu"
                      android:layout_width="wrap_content"
                      android:layout_marginTop="10dp"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="5dp"
                      android:text="0"
                      android:textSize="12sp"
                      android:textColor="@color/red"/>
                             </LinearLayout>
               
                   <LinearLayout 
                          android:layout_width="0dp"
                          android:layout_weight="5"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                            <TextView 
                      android:layout_width="wrap_content"
                      android:layout_marginTop="10dp"
        
                      android:layout_height="wrap_content"
                      android:text="总咨询数"
                      android:textSize="12sp"
                    />
                             <TextView 
                              android:id="@+id/team_zonzixunshu"
                      android:layout_width="wrap_content"
                      android:layout_marginTop="10dp"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="5dp"
                      android:text="0"
                      android:textSize="12sp"
                      android:textColor="@color/red"/>
                               </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                        <ListView 
                  android:id="@+id/team_group_docter"
                     android:layout_width="match_parent"
	    android:layout_height="fill_parent"
	    android:scrollbars="none"
                  ></ListView>
                   
                </LinearLayout>
         
                
                
	      </LinearLayout>
	      
	      
       </ScrollView>
   <LinearLayout
       android:visibility="gone"
            android:layout_width="match_parent" 
            android:layout_height="0dp"
            android:layout_weight="1" 
            android:orientation="horizontal"   >
        
	      <Button
	          android:id="@+id/team_goup_jiaru" 
	          android:layout_width="match_parent"
	          android:layout_height="wrap_content"
	          android:background="@color/blue"
	          android:layout_marginLeft="10dp"
	          android:layout_marginRight="10dp"
	          android:textColor="@color/white"
	          android:paddingTop="10dp"
	          android:layout_gravity="center_vertical"
	          android:paddingBottom="10dp"	   
	          android:text="立即转入"/>
	      </LinearLayout>
</LinearLayout>
