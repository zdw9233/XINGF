		        </LinearLayout>
		        <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="5dp"
				        android:textColor="@color/blue"
				        android:textSize="12dp"
				        android:text="(受伤情况、受伤情况、受伤部位等)" />
		           
		       <LinearLayout 
		             android:background="@drawable/hui_stroke"
		             android:layout_marginTop="10dp"
		             android:padding="3dp"
		             android:layout_width="match_parent" 
		             android:layout_height="wrap_content">
		             <EditText
			            android:id="@+id/register_info_shoushushi"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:background="@null"
			            android:ems="10"
			            android:minLines="1"
			            android:gravity="top"
			            android:textSize="@dimen/font_style_14"
			            android:minHeight="80dp"
			            android:hint="手术室"  >
			        </EditText>
		        </LinearLayout>
		        <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="5dp"
				        android:textColor="@color/blue"
				        android:textSize="12dp"
				        android:text="手术项目、手术时间、恢复情况等" />
		       <LinearLayout 
		            android:id="@+id/register_info_liucanshi_layout"
		             android:background="@drawable/hui_stroke"
		             android:layout_marginTop="10dp"
		             android:padding="3dp"
		             android:layout_width="match_parent" 
		             android:layout_height="wrap_content">
		             <EditText
			            android:id="@+id/register_info_liucanshi"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:background="@null"
			            android:ems="10"
			            android:minLines="1"
