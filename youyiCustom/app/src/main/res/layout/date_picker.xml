<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <com.uyi.app.ui.custom.HeaderView 
	    android:id="@+id/headerView"
	    android:layout_width="match_parent" 
	    android:layout_height="wrap_content">
	</com.uyi.app.ui.custom.HeaderView>
    <cn.aigestudio.datepicker.views.DatePicker 
        android:id="@+id/datepicker"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content">
    </cn.aigestudio.datepicker.views.DatePicker>
    <LinearLayout
        android:layout_marginTop="10dp"
         android:layout_width="match_parent" 
         android:layout_height="50dp" 
         android:gravity="center"
         android:orientation="horizontal">
        <TextView 
            android:id="@+id/date_picker_hh"
            android:layout_width="60dp" 
            android:layout_height="30dp" 
            android:gravity="center"
            android:layout_marginLeft="5dp"  
            android:background="@drawable/hui_stroke"
            android:textSize="@dimen/font_style_14" 
            android:inputType="number"
            android:text="00"/>
        <TextView 
            android:layout_width="wrap_content" 
            android:layout_marginLeft="5dp" 
            android:textSize="@dimen/font_style_14" 
            android:layout_height="wrap_content" 
            android:text="时"/>
        <TextView 
             android:id="@+id/date_picker_mm"
             android:layout_width="60dp" 
            android:layout_height="30dp" 
            android:layout_marginLeft="5dp"  
            android:gravity="center"
            android:background="@drawable/hui_stroke"
            android:textSize="@dimen/font_style_14" 
            android:text="00"/>
        <TextView 
            android:layout_width="wrap_content" 
            android:layout_marginLeft="5dp" 
            android:textSize="@dimen/font_style_14" 
            android:layout_height="wrap_content" 
            android:text="分"/>
    </LinearLayout>
</LinearLayout>
