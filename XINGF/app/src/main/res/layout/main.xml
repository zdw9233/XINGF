<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/main_contalner"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="3dp" >

        <LinearLayout
            android:id="@+id/main_tab_1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout 
                android:layout_width="match_parent" 
                android:layout_height="wrap_content" 
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                 <ImageView
	                android:id="@+id/main_tab_1_icon"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	             />
                  <TextView
	                android:id="@+id/main_tab_1_count"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:paddingLeft="2dp"
	                android:paddingRight="2dp"
	                android:visibility="invisible"
	          />
            </LinearLayout>
           

            <TextView
                android:id="@+id/main_tab_1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_tab1"
                android:textSize="@dimen/font_style_13"
     />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_tab_2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/main_tab_2_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />

                <TextView
                    android:id="@+id/main_tab_2_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:id="@+id/main_tab_2_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_tab1"
                android:textSize="@dimen/font_style_13"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_tab_3"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/main_tab_3_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/main_tab_3_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:id="@+id/main_tab_3_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/main_tab1"
                android:textSize="@dimen/font_style_13"
     />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_tab_4"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/main_tab_4_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/main_tab_4_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:id="@+id/main_tab_4_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_tab1"
                android:textSize="@dimen/font_style_13"
                 />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>