<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/blue_stroke"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/conform_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="提示"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="#d2d2d2" />

        <TextView
            android:id="@+id/conform_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/app_name"
             android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/conform_dialog_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@null"
            android:ems="18"
            android:hint="gfefew"
            android:inputType="textPassword"
            android:visibility="gone" >

            <requestFocus />
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal" >
            <Button
                 android:id="@+id/conform_dialog_quereng"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/blue_bg"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_margin="5dp"
               	android:textColor="@color/white" 
                 android:text="确定"
                />
            <Button
                android:id="@+id/conform_dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/header_background"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                 android:layout_margin="5dp"
                 android:text="取消"
                 android:textColor="@color/list_item_content_color" 
               />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>