<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/anxin_banner" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:textSize="@dimen/font_style_12"
            android:text="血糖试纸" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:background="@drawable/hui_stroke"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/sub"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/sel_gray_to_white"
                android:gravity="center"
                android:text="-" />

            <TextView
                android:id="@+id/number"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="1"
                android:textSize="@dimen/font_style_12" />
            <TextView
                android:id="@+id/unit"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="次"
                android:textSize="@dimen/font_style_12" />
            <TextView
                android:id="@+id/add"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/sel_gray_to_white"
                android:gravity="center"
                android:text="+" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_weight="1">
        <TextView
            android:id="@+id/money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:gravity="end"
            android:text="1000"
            android:textColor="@color/orangered"
            android:textSize="@dimen/font_style_10" />

        <TextView
            android:id="@+id/jkd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="健康豆"
            android:textSize="@dimen/font_style_10" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7">
        <TextView
            android:id="@+id/buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/blue_stroke"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:text="立即购买"
            android:textColor="@color/blue"
            android:textSize="@dimen/font_style_10" />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lightgray" />
</LinearLayout>