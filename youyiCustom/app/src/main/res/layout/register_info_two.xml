<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@color/white"
    android:orientation="vertical" >
    
    <com.uyi.app.ui.custom.HeaderView
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.uyi.app.ui.custom.HeaderView>
<LinearLayout 
    android:id="@+id/register_info_two"
    android:layout_width="match_parent" 
    android:layout_height="match_parent"
    android:visibility="gone" 
    android:padding="30dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal" >
        <ImageView 
            android:layout_margin="5dp"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:src="@drawable/success_icon"/>
        <TextView 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_style_25"
            android:textColor="@color/green"
             android:text="所有资料填写完成"/>
        
         
    </LinearLayout>
    <Button
            android:id="@+id/register_info_return"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="40dp"
            android:background="@drawable/blue_bg"
            android:text="立即加入健康团队"
            android:textColor="@color/white" />
</LinearLayout>
    
    <ScrollView 
        android:id="@+id/register_info_one"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:visibility="visible"
        android:scrollbars="none">
        <LinearLayout 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:orientation="vertical">
            <LinearLayout 
		        android:layout_width="match_parent" 
		        android:layout_height="wrap_content" 
		        android:gravity="center"
		        android:layout_margin="10dp"
		        android:orientation="horizontal">
		        <ImageView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@drawable/tips_icon" />
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#ff7200"
		            android:text="想得到医生准确指导,请认真填写健康资料,健康资料将作为医生的重要参考依据!" />
		    </LinearLayout>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="30dp"
				android:orientation="horizontal"
				android:background="@color/light_gray">
				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="基本信息"
					android:layout_marginLeft="10dp"
					android:textColor="@color/red"
					android:layout_gravity="center_vertical"/>
			</LinearLayout>
			<LinearLayout
				android:layout_marginTop="10dp"
				android:layout_marginLeft="20dp"
				android:layout_marginRight="20dp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal" >

				<LinearLayout
					android:layout_width="0dip"
					android:layout_height="40dp"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:orientation="horizontal" >

					<EditText
						android:id="@+id/register_height"
						android:layout_width="0dip"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:background="@drawable/hui_stroke"
						android:ems="10"
						android:hint="@string/reg_height"
						android:inputType="number"
						android:paddingLeft="5dp"
						android:textSize="@dimen/font_style_14" >
					</EditText>

					<TextView
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:layout_margin="10dp"
						android:text="cm"
						android:gravity="center"
						android:textColor="@color/list_item_content_color" />
				</LinearLayout>

				<LinearLayout
					android:layout_width="0dip"
					android:layout_height="40dp"
					android:layout_weight="1"
					android:gravity="center_vertical"
					android:orientation="horizontal" >

					<EditText
						android:id="@+id/register_weight"
						android:layout_width="0dip"
						android:layout_height="match_parent"
						android:layout_weight="1"
						android:background="@drawable/hui_stroke"
						android:ems="10"
						android:hint="@string/reg_weight"
						android:inputType="numberDecimal"
						android:paddingLeft="5dp"
						android:textSize="@dimen/font_style_14" >
					</EditText>

					<TextView
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:layout_marginLeft="10dp"
						android:text="kg"
						android:gravity="center"
						android:textColor="@color/list_item_content_color" />
				</LinearLayout>
			</LinearLayout>
		    <LinearLayout 
		        android:layout_width="match_parent" 
		        android:layout_height="wrap_content" 
		        android:padding="10dp"
		        android:orientation="vertical">
		        <LinearLayout 
		             android:background="@drawable/hui_stroke"
		             android:padding="3dp"
		            android:layout_width="match_parent" 
		            android:layout_height="wrap_content">
		             <EditText
			            android:id="@+id/register_info_gerenjiwangbinshi"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:background="@null"
			            android:ems="10"
			            android:minLines="1"
			            android:gravity="top"
			            android:textSize="@dimen/font_style_14"
			            android:minHeight="80dp"
			            android:hint="个人既往病史"
			            android:inputType="textPostalAddress" >
			        </EditText>
		        </LinearLayout>
		           <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="5dp"
				        android:textColor="@color/blue"
				        android:textSize="12dp"
				        android:text="(请填写有无高血压、糖尿病、消化性溃厰、冠心病、慢性肺病、慢性肾脏疾病等)" />
		        
		        <LinearLayout 
		             android:background="@drawable/hui_stroke"
		             android:layout_marginTop="10dp"
		             android:padding="3dp"
		             android:layout_width="match_parent" 
		             android:layout_height="wrap_content">
		             <EditText
			            android:id="@+id/register_info_chuanrangbingshi"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:background="@null"
			            android:ems="10"
			            android:minLines="1"
			            android:textSize="@dimen/font_style_14"
			            android:gravity="top"
			            android:minHeight="80dp"
			            android:hint="传染病史"
			            android:inputType="textPostalAddress" >
			        </EditText>
		        </LinearLayout>
		        <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="5dp"
				        android:textColor="@color/blue"
				        android:textSize="12dp"
				        android:text="(有无肝炎、结核、迋疾等传染病史)" />
		        
		        
		          <LinearLayout 
		             android:background="@drawable/hui_stroke"
		             android:layout_marginTop="10dp"
		             android:padding="3dp"
		             android:layout_width="match_parent" 
		             android:layout_height="wrap_content">
		             <EditText
			            android:id="@+id/register_info_waishang"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:background="@null"
			            android:ems="10"
			            android:minLines="1"
			            android:gravity="top"
			            android:textSize="@dimen/font_style_14"
			            android:minHeight="80dp"
			            android:hint="外伤史"
			            android:inputType="textPostalAddress" >
			        </EditText>
		        </LinearLayout>
		        <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="5dp"
				        android:textColor="@color/blue"
				        android:textSize="12dp"
				        android:text="(受伤情况、受伤情况、受伤部位等)" />
		           
		       <LinearLayout 
		             android:background="@drawable/hui_stroke"
		             android:layout_marginTop="10dp"
		             android:padding="3dp"
		             android:layout_width="match_parent" 
		             android:layout_height="wrap_content">
		             <EditText
			            android:id="@+id/register_info_shoushushi"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:background="@null"
			            android:ems="10"
			            android:minLines="1"
			            android:gravity="top"
			            android:textSize="@dimen/font_style_14"
			            android:minHeight="80dp"
			            android:hint="手术室"
			            android:inputType="textPostalAddress" >
			        </EditText>
		        </LinearLayout>
		        <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="5dp"
				        android:textColor="@color/blue"
				        android:textSize="12dp"
				        android:text="手术项目、手术时间、恢复情况等" />
		       <LinearLayout 
			            android:id="@+id/register_info_liucanshi_layout"
		             android:background="@drawable/hui_stroke"
		             android:layout_marginTop="10dp"
		             android:padding="3dp"
		             android:layout_width="match_parent" 
		             android:layout_height="wrap_content">
		             <EditText
			            android:id="@+id/register_info_liucanshi"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:background="@null"
			            android:ems="10"
			            android:minLines="1"
			            android:textSize="@dimen/font_style_14"
			            android:gravity="top"
			            android:minHeight="80dp"
			            android:hint="女性患者怀孕、分娩、流产史"
			            android:inputType="textPostalAddress" >
			        </EditText>
		        </LinearLayout>
		       
		            <LinearLayout 
			            android:id="@+id/register_info_yuejing_layout"
		             android:background="@drawable/hui_stroke"
		             android:layout_marginTop="10dp"
		             android:padding="3dp"
		             android:layout_width="match_parent" 
		             android:layout_height="wrap_content">
		             <EditText
			            android:id="@+id/register_info_yuejing"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:background="@null"
			            android:ems="10"
			            android:minLines="1"
			            android:textSize="@dimen/font_style_14"
			            android:gravity="top"
			            android:minHeight="80dp"
			            android:hint="女性患者月经情况"
			            android:inputType="textPostalAddress" >
			        </EditText>
		        </LinearLayout>
		           <LinearLayout 
		             android:background="@drawable/hui_stroke"
		             android:layout_marginTop="10dp"
		             android:padding="3dp"
		             android:layout_width="match_parent" 
		             android:layout_height="wrap_content">
		             <EditText
			            android:id="@+id/register_info_guomingshi"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:background="@null"
			            android:ems="10"
			            android:minLines="1"
			            android:textSize="@dimen/font_style_14"
			            android:gravity="top"
			            android:minHeight="80dp"
			            android:hint="食物及药物过敏史"
			            android:inputType="textPostalAddress" >
			        </EditText>
		        </LinearLayout>
		          <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="5dp"
				        android:textColor="@color/blue"
				        android:textSize="12dp"
				        android:text="(如有过敏,是对什么事物或药物过敏,过敏后的表现是什么)" />
		          
		          
		          
		            <LinearLayout 
		             android:background="@drawable/hui_stroke"
		             android:layout_marginTop="10dp"
		             android:padding="3dp"
		             android:layout_width="match_parent" 
		             android:layout_height="wrap_content">
		             <EditText
			            android:id="@+id/register_info_shuxueshi"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:background="@null"
			            android:ems="10"
			            android:minLines="1"
			            android:textSize="@dimen/font_style_14"
			            android:gravity="top"
			            android:minHeight="80dp"
			            android:hint="输血史"
			            android:inputType="textPostalAddress" >
			        </EditText>
		        </LinearLayout>
		          <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="5dp"
				        android:textColor="@color/blue"
				        android:textSize="12dp"
				        android:text="(输血时间,输血频率等)" /> 
				        
		          
		        <LinearLayout 
		             android:background="@drawable/hui_stroke"
		             android:layout_marginTop="10dp"
		             android:padding="3dp"
		             android:layout_width="match_parent" 
		             android:layout_height="wrap_content">
		             <EditText
			            android:id="@+id/register_info_jiazhubinshi"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:background="@null"
			            android:ems="10"
			            android:minLines="1"
			            android:textSize="@dimen/font_style_14"
			            android:gravity="top"
			            android:minHeight="80dp"
			            android:hint="家族病史"
			            android:inputType="textPostalAddress" >
			        </EditText>
		        </LinearLayout>
		          <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="5dp"
				        android:textColor="@color/blue"
				        android:textSize="12dp"
				        android:text="(家族中有无慢性疾病、肿瘤、精神疾病、罕少见病患者)" /> 
				        
		          
		          
		           <LinearLayout 
		             android:background="@drawable/hui_stroke"
		             android:layout_marginTop="10dp"
		             android:padding="3dp"
		             android:layout_width="match_parent" 
		             android:layout_height="wrap_content">
		             <EditText
			            android:id="@+id/register_info_muqianfuyaoqingkuang"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:background="@null"
			            android:ems="10"
			            android:minLines="1"
			            android:textSize="@dimen/font_style_14"
			            android:gravity="top"
			            android:minHeight="80dp"
			            android:hint="目前服药情况"
			            android:inputType="textPostalAddress" >
			        </EditText>
		        </LinearLayout>
		          <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginTop="5dp"
				        android:textColor="@color/blue"
				        android:textSize="12dp"
				        android:text="(药物名称、服用周期、服用频率等)" /> 
				        
		          
		      <LinearLayout
		             android:background="@drawable/hui_stroke"
		             android:layout_marginTop="10dp"
		             android:padding="3dp"
		             android:layout_width="match_parent" 
		             android:layout_height="wrap_content">
		             <EditText
			            android:id="@+id/register_info_qitabuchongqingkuang"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:background="@null"
			            android:ems="10"
			            android:minLines="1"
			            android:textSize="@dimen/font_style_14"
			            android:gravity="top"
			            android:minHeight="80dp"
			            android:hint="其他需要补充的情况"
			            android:inputType="textPostalAddress" >
			        </EditText>
		        </LinearLayout>
		        
		         <Button
			            android:id="@+id/register_info_submit"
			            android:layout_width="match_parent"
			            android:layout_marginTop="30dp"
			            android:layout_height="40dp"
			            android:background="@drawable/blue_bg"
			            android:text="@string/tijiao"
			            android:textColor="@color/white" />
		    </LinearLayout>
        </LinearLayout>
    </ScrollView>

 

</LinearLayout>
