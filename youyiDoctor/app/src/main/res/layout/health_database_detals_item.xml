<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
	<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView
		    android:id="@+id/health_database_detals_item_name"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="空腹血糖：" />
		<TextView
		    android:id="@+id/health_database_detals_item_value"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/blue"
		    android:text="200" />
		<TextView
		    android:id="@+id/health_database_detals_item_danwei"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/list_item_content_color"
		    android:textSize="@dimen/font_style_10"
		    android:text="mm/Hg" />
	</LinearLayout>    
	<TextView
		    android:id="@+id/health_database_detals_item_execption"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="@color/red"
		    android:textSize="@dimen/font_style_10" />
</LinearLayout>
