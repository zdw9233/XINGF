<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center_vertical"
    android:background="@drawable/sel_new_white_btn_bg2"
    android:orientation="horizontal" >
    <com.uyi.app.ui.custom.RoundedImageView
        android:id="@+id/item_consultation_logo"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_margin="8dp"
        android:src="@drawable/logo"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_healthy_questions_content"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:maxLines="1"
            android:textColor="@color/tet_type_3"
            android:layout_marginLeft="8dp"
            android:textSize="14sp"
            android:text="" />
        <TextView
            android:id="@+id/item_healthy_questions_name"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="6dp"
            android:textColor="@color/tet_type_6"
            android:textSize="@dimen/font_style_12"
            android:text="" />
    </LinearLayout>


    <TextView
        android:id="@+id/item_healthy_questions_date"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  
        android:textColor="@color/tet_type_9"
        android:textSize="@dimen/font_style_12"
        android:layout_marginTop="10dp"
        android:text="2012-01-06" />

</LinearLayout>
