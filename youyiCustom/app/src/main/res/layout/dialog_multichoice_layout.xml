<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#00000000"
    android:clickable="true"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/white"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >
             <TextView
                android:id="@+id/multichoic_title"
                android:textSize="22.0dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="#ff666666"
                android:visibility="visible" />
           <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginTop="5dp"
            android:background="#ffd0d0d0" />
            <TextView
                android:id="@+id/multichoic_version"
                android:textSize="12.0dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ff666666"
                android:visibility="visible" />

 			<TextView
                android:id="@+id/multichoic_content"
                android:textSize="12.0dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="#ff666666"
                android:visibility="visible" />

        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="#ffd0d0d0" />
        <LinearLayout
            android:id="@+id/dialog_progress"
            android:layout_width="fill_parent"
            android:layout_height="30.0dip"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/app_download_pro_text"
                android:textSize="12.0dip"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:gravity="right"
                android:layout_marginRight="5dp"
                android:textColor="#ff666666"
                 />
            <ProgressBar
	        	android:id="@+id/app_download_item_pro"
	       	 	style="?android:attr/progressBarStyleHorizontal"
	       	 	android:progressDrawable="@drawable/barcolor"
	       	 	android:max="100"
	       	 	android:progress="0"
	        	android:layout_width="match_parent"
	        	android:layout_height="5dp" />
        </LinearLayout>
         <LinearLayout
            android:id="@+id/dialog_layout_buttons"
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_gravity="bottom"
            android:paddingTop="0dip"
            android:gravity="center"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/button_cancel"
                android:layout_width="114.0dip"
                android:layout_height="40.0dip"
                android:textColor="@color/black"
                android:background="@color/content_background"
                android:gravity="center"
                android:text="取消" />
            <Button
                android:id="@+id/button_ok"
                android:layout_width="114.0dip"
                android:layout_height="40.0dip"
                android:layout_marginLeft="20.0dip"
                android:textColor="@color/white"
                android:background="@color/blue"
                android:gravity="center"
                android:text="更新" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>