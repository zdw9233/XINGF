<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<LinearLayout 
    android:id="@+id/back_city"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/content_background"
    android:orientation="horizontal"
    >
    <TextView 
     android:layout_marginTop="10dp"
     android:layout_marginLeft="10dp"
     android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     android:background="@drawable/left_arrow_back"
        />
    <TextView 
     android:layout_marginTop="10dp"
     android:layout_marginLeft="5dp"
     android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:text="返回"
    android:textColor="@color/blue"
        />
    
</LinearLayout>
 <LinearLayout 
	            android:layout_width="match_parent" 
	            android:layout_height="35dp" 
	            android:layout_marginLeft="10dp"
	            android:layout_marginRight="10dp"
	            android:layout_marginTop="5dp"
	            android:background="@drawable/hui_stroke"
	            android:orientation="horizontal">

	            <ImageView
	                android:id="@+id/city_imageView2"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_margin="5dp"
	                android:layout_gravity="center_vertical"
	                android:src="@drawable/search_icon" />

	            <EditText
	                android:id="@+id/team_city_edit_text"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_weight="1"
	                android:layout_gravity="center_vertical"
	                android:background="@null"
	                android:hint="城市/拼音"
	                android:textSize="12sp"
	                android:ems="10" >
	
	                <requestFocus />
	            </EditText>
	        </LinearLayout>
    
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    >
    <TextView 
     android:layout_marginTop="10dp"
     android:layout_marginLeft="10dp"
     android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:text="当前城市:"
    android:textStyle="bold"
    android:textSize="14sp"
        />
    <TextView 
        android:id="@+id/danqiancity"
     android:layout_marginTop="10dp"
     android:layout_marginLeft="5dp"
     android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    android:text="---"
    android:textColor="@color/footer_somber"
    
        />
   
</LinearLayout>
  <TextView 
    
     android:layout_marginLeft="10dp"
     android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
  android:background="@color/content_background"
 
        />
  <TextView 
    android:id="@+id/allcity"
     android:layout_marginLeft="10dp"
     android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
 android:text="全部城市"
 android:padding="5dp"
 android:background="@color/blue"
 android:textStyle="bold"
 
        />
     <com.uyi.app.ui.team.city.ContactListViewImpl
      android:id="@+id/city_list"
      android:layout_width="match_parent"
      android:layout_height="fill_parent"
      />

</LinearLayout>
